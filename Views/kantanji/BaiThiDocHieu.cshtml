@model  List<DOAN_WEB.Models.KantanjiModel.DEDOC>
@{
    ViewBag.Title = "BaiThiDocHieu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <link href="~/Content/Style.css" rel="stylesheet" />
</head>
<body>

    <link rel="stylesheet" href="https://codetienich.github.io/dulieu/quiz1.css">
    <link rel="stylesheet" href="https://codetienich.github.io/dulieu/quiz2.css">
    <script src="https://codetienich.github.io/dulieu/mainquiz1.js" type="text/javascript"></script>
    @Html.Action("DeDoc", "kantanji")
    <div class="quiz-main" data-quiztype="Graded" data-duration="0">
        <ul>
            @foreach (var item in Model)
            {
                <li data-sectionid="@item.IDDOC" class="quiz-section">
                    <div class="quiz-section-title">
                        <b><span style="color: black; font-family: Times, Times New Roman, serif;">Câu @item.IDDOC: </span></b>
                        <b><span style="color: blue; font-family: Times, Times New Roman, serif;"> @item.CAUHOI</span></b>
                    </div>
                    <div class="quiz-section-content">
                        <div class="item item-question item-choices">
                            <ul class="list btn-group group-theme">
                                <li class="list-item">
                                    <label class="overlabel"><input type="radio" class="hide" name="option-@item.IDDOC" /> <span class="mark"></span></label>
                                    <div class="boxcheck">
                                        <div class="answer-desc textview"> @item.DA1 </div>
                                    </div>
                                </li>
                                <li class="list-item">
                                    <label class="overlabel"><input type="radio" class="hide" name="option-@item.IDDOC" /> <span class="mark"></span></label>
                                    <div class="boxcheck">
                                        <div class="answer-desc textview"> @item.DA2 </div>
                                    </div>
                                </li>
                                <li class="list-item">
                                    <label class="overlabel"><input type="radio" class="hide" name="option-@item.@item.IDDOC" /> <span class="mark"></span> </label>
                                    <div class="boxcheck">
                                        <div class="answer-desc textview"> @item.DA3 </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </li>
                <br />
            }

        <a class="btn btn-primary disabled check-quiz"> <a href="@Url.Action("BaiThiNghe", "kantanji")">Tiếp tục</a></a>





    </div>
    </ul>
   
    </div>

</body>

</html>

