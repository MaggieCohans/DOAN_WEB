@model  List<DOAN_WEB.Models.KantanjiModel.CHUDECHINH>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="~/Content/KantanjiStyle/FlashCardStyle.css" rel="stylesheet" />
    <link href="~/Content/KantanjiStyle/FlippingFCStyle.css" rel="stylesheet" />
  
