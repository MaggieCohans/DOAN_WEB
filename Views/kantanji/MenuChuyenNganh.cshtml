<body>
        <div class="aside">
            <ul class="major">
                @foreach (var item in Model)
                {
                    <li><a style="background: #006e7b; width: 150px; margin: 8px;cursor: pointer; color: white; border-radius: 13px;font-size:9px;transition: 0.2s ease-in;text-align: center;text-decoration: none;" href="@Url.Action("FlashCard", "kantanji", new { id = item.IDCHUDE })" class="major-item">@item.TENCHUDE</a> </li>
                }

            </ul>
        </div>
    </body>
